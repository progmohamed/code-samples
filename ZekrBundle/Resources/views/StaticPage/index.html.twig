{% extends ':admin:base.html.twig' %}
{% import "AdminBundle:Main:_helper.html.twig" as helper %}

{% set sideMenuActiveSection = 'zekr' %}

{% block breadcrumb %}
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
        </script>

        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="{{ path('admin_main_home') }}">الرئيسة</a>
            </li>
            <li class="active">الصفحات الثابتة</li>
        </ul>
    </div>
{% endblock %}

{% block content %}

    <div class="page-header">
        <h1>الصفحات الثابتة</h1>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="table-responsive">
                <form action="{{ path('zekr_static_page_batch') }}" method="post" class="gridForm">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                    <tr>
                        <th class="center" width="35">
                            <label>
                                <input type="checkbox" class="ace" />
                                <span class="lbl"></span>
                            </label>
                        </th>
                        <th>{{ knp_pagination_sortable(entities, 'ID', 's.id') }}</th>
                        <th>{{ knp_pagination_sortable(entities, 'slug', 's.slug') }}</th>
                        <th>{{ knp_pagination_sortable(entities, 'العنوان', 'st.title') }}</th>
                        <th></th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td class="center" width="35">
                                <label>
                                    <input type="checkbox" class="ace" value="{{ entity.id }}" name="idx[]" />
                                    <span class="lbl"></span>
                                </label>
                            </td>
                            <td>{{ entity.id }}</td>
                            <td>{{ entity.slug }}</td>
                            <td>{{ entity.translate().title }}</td>

                            <td>
                                <div class="visible-md visible-lg hidden-sm hidden-xs action-buttons">
                                    <a class="blue" href="{{ path('zekr_static_page_show', { 'id': entity.id }) }}">
                                        <i class="icon-zoom-in bigger-130"></i>
                                    </a>

                                    <a class="green" href="{{ path('zekr_static_page_edit', { 'id': entity.id }) }}">
                                        <i class="icon-pencil bigger-130"></i>
                                    </a>

                                    <a class="deleteRow red" href="#" url="{{ path('zekr_static_page_delete', { 'id': entity.id, 'redirect': app.request.uri|base64_encode }) }}">
                                        <i class="icon-trash bigger-130"></i>
                                    </a>
                                </div>

                                <div class="visible-xs visible-sm hidden-md hidden-lg">
                                    <div class="inline position-relative">
                                        <button class="btn btn-minier btn-yellow dropdown-toggle" data-toggle="dropdown">
                                            <i class="icon-caret-down icon-only bigger-120"></i>
                                        </button>

                                        <ul class="dropdown-menu dropdown-only-icon dropdown-yellow pull-right dropdown-caret dropdown-close">
                                            <li>
                                                <a href="{{ path('zekr_static_page_show', { 'id': entity.id }) }}" class="tooltip-info" data-rel="tooltip" title="View">
                                                    <span class="blue">
                                                        <i class="icon-zoom-in bigger-120"></i>
                                                    </span>
                                                </a>
                                            </li>

                                            <li>
                                                <a href="{{ path('zekr_static_page_edit', { 'id': entity.id }) }}" class="tooltip-success" data-rel="tooltip" title="Edit">
                                                    <span class="green">
                                                        <i class="icon-edit bigger-120"></i>
                                                    </span>
                                                </a>
                                            </li>

                                            <li>
                                                <a href="#" url="{{ path('zekr_static_page_delete', { 'id': entity.id, 'redirect': app.request.uri|base64_encode }) }}" class="deleteRow tooltip-error" data-rel="tooltip" title="Delete">
                                                    <span class="red">
                                                        <i class="icon-trash bigger-120"></i>
                                                    </span>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div class="form-inline">
                    <label for="all_elements" class="checkbox"></label>
                    <select name="action">
                        <option value="delete">حذف</option>
                    </select>
                    <input type="submit" value="Ok" class="btn btn-sm btn-primary">
                </div>
                </form>
            </div><!-- /.table-responsive -->
        </div><!-- /span -->
        {{ knp_pagination_render(entities) }}

    </div><!-- /row -->

{% endblock %}

{% block bottomScripts %}
    {{ helper.gridJavaScripts(path('zekr_static_page_list')) }}
{% endblock %}
