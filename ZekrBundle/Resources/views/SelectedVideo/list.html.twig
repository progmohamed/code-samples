{% extends ':admin:base.html.twig' %}
{% import "AdminBundle:Main:_helper.html.twig" as helper %}

{% set sideMenuActiveSection = 'zekr' %}

{% block head %}
    {{ parent() }}
    <style>
        /* some styling for table1 */
        table#sample-table-1 tr.sorting-row td {
            background-color: #ccc;
        }

        table#sample-table-1.sorting-table {
            cursor: ns-resize;
            box-shadow: none;
            outline: 1px solid #333;
        }

        table#sample-table-1.sorting-table tbody tr:not(.sorting-row) td {
            opacity: 1;
            color: #bbb;
            text-shadow: 0 1px 0 rgba(255, 255, 255, 1);
        }
    </style>
{% endblock %}

{% block breadcrumb %}
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try {
                ace.settings.check('breadcrumbs', 'fixed')
            } catch (e) {
            }
        </script>

        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="{{ path('admin_main_home') }}">الرئيسة</a>
            </li>
            <li><a href="{{ path('zekr_video_list') }}">الفيديوهات</a></li>
            <li class="active">الفيديوهات المختارة</li>
        </ul>
    </div>
{% endblock %}

{% block content %}
    <div class="page-header">
        <h1>الفيديوهات المختارة</h1>
    </div>

        {% if entities is not empty %}
            <div class="row">
                <div class="col-xs-12">
                    <div class="table-responsive">
                        <form action="{{ path('zekr_selected_video_batch') }}" method="post" class="gridForm">
                            <table id="sample-table-1" class="table table-striped table-bordered table-hover">
                                <thead>
                                <tr>
                                    <th class="center" width="35">
                                        <label>
                                            <input type="checkbox" class="ace"/>
                                            <span class="lbl"></span>
                                        </label>
                                    </th>
                                    <th>العنوان</th>
                                    <th></th>
                                </tr>
                                </thead>

                                <tbody style="cursor:all-scroll">
                                {% for entity in entities %}
                                    <tr class="img-row" data-id="{{ entity.data.id }}">
                                        <td class="center" width="35">
                                            <label>
                                                <input type="checkbox" class="ace" value="{{ entity.data.id }}"
                                                       name="idx[]"/>
                                                <span class="lbl"></span>
                                            </label>
                                        </td>
                                        <td>
                                            {{ entity.data.video.translate().title }}
                                        </td>
                                        <td>
                                            <div class="visible-md visible-lg hidden-sm hidden-xs action-buttons">
                                                <a class="deleteRow red" href="#" url="{{ path('zekr_selected_video_delete', { 'id': entity.data.id, 'redirect': app.request.uri|base64_encode }) }}">
                                                    <i class="icon-trash bigger-130"></i>
                                                </a>
                                            </div>

                                            <div class="visible-xs visible-sm hidden-md hidden-lg">
                                                <div class="inline position-relative">
                                                    <button class="btn btn-minier btn-yellow dropdown-toggle" data-toggle="dropdown">
                                                        <i class="icon-caret-down icon-only bigger-120"></i>
                                                    </button>

                                                    <ul class="dropdown-menu dropdown-only-icon dropdown-yellow pull-right dropdown-caret dropdown-close">
                                                        <li>
                                                            <a href="#" url="{{ path('zekr_selected_video_delete', { 'id': entity.data.id, 'redirect': app.request.uri|base64_encode }) }}" class="deleteRow tooltip-error" data-rel="tooltip" title="Delete">
                                                                <span class="red">
                                                                    <i class="icon-trash bigger-120"></i>
                                                                </span>
                                                            </a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>

                                {% endfor %}
                                </tbody>
                            </table>
                            <div class="form-inline">
                                <label for="all_elements" class="checkbox"></label>
                                <select name="action">
                                    <option value="delete">حذف</option>
                                </select>
                                <input type="submit" value="Ok" class="btn btn-sm btn-primary">
                            </div>

                        </form>
                    </div><!-- /.table-responsive -->
                </div><!-- /span -->

            </div><!-- /row -->

        {% endif %}

{% endblock %}

{% block bottomScripts %}
    {{ helper.gridJavaScripts() }}
    <script src="{{ asset('bundles/admin/js/rowsorter/RowSorter.js') }}"></script>

    <script>

        function gebi(id) {
            return document.getElementById(id);
        }

        RowSorter(gebi('sample-table-1'), {
            onDrop: function (tbody, row, new_index, old_index) {

                var sortArr = [];
                $('.img-row').each(function () {
                    sortArr.push($(this).data('id'));
                });

                $.ajax({
                    method: "POST",
                    url: "{{ path('zekr_selected_video_resort') }}",
                    data: {
                        'sortArr': sortArr
                    },
                    dataType: "json",
                })

            }
        });
    </script>

{% endblock %}


