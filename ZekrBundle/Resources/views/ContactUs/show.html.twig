{% extends ':admin:base.html.twig' %}

{% set sideMenuActiveSection = 'zekr' %}

{% block breadcrumb %}
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
        </script>

        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="{{ path('admin_main_home') }}">الرئيسة</a>
            </li>
            <li><a href="{{ path('zekr_contact_us_list') }}">رسائل المستخدمين</a></li>
            <li class="active">رسالة</li>
        </ul>
    </div>
{% endblock %}


{% block content %}
    <div class="page-header">
        <h1>رسالة</h1>
    </div>

    <div class="btn-group fly">
        <a class="btn btn-sm btn-inverse" href="{{ path('zekr_contact_us_list') }}">القائمة</a>
    </div>

    <div class="row">
        <div class="col-xs-12">

            <table class="table table-bordered table-striped">
                <tbody>
                <tr>
                    <th width="100">Id</th>
                    <td>{{ entity.id }}</td>

                </tr>
                <tr>
                    <th>الإسم</th>
                    <td>{{ entity.name }}</td>
                </tr>
                <tr>
                    <th>البريد الإلكتروني</th>
                    <td>{{ entity.email }}</td>
                </tr>
                <tr>
                    <th>اللغة</th>
                    <td>{{ adminHelper.getLanguageByLocale(entity.locale).name }}</td>
                </tr>

                <tr>
                    <th>عنوان الرسالة</th>
                    <td>{{ entity.title }}</td>
                </tr>

                <tr>
                    <th>نص الرسالة</th>
                    <td>{{ entity.message }}</td>
                </tr>
                </tbody>
            </table>

        </div>
    </div>

{% endblock %}